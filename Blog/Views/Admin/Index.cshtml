
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Admin Paneli</h1>
    </div>
</div>

<!-- Icon Cards-->
<div class="row">
    <div class="col-xl-4 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-desktop"></i>
                </div>              
                <div class="mr-5">Kategoriler     <b>@ViewBag.katSayi</b></div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Kategoriler", "Admin")">
                <span class="float-left">Listele</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-edit"></i>
                </div>
                <div class="mr-5">Yazılar     <b>@ViewBag.yaziSayi</b></div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Yazilar", "Admin")">
                <span class="float-left">Listele</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    <div class="col-xl-4 col-sm-6 mb-3">
        <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-user"></i>
                </div>
                <div class="mr-5">Üyeler     <b>@ViewBag.uyeSayi</b></div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("Uyeler", "Admin")">
                <span class="float-left">Listele</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
</div>

