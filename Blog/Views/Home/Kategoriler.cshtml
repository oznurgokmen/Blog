@model IEnumerable<Kategori>

<h5 class="card-header">Kategoriler</h5>
<div class="card-body">
    <div class="row">
        <div class="col-lg-12">
            <ul class="list-unstyled mb-0">

                @foreach (var kategori in Model)
                {
                    <li>
                        <a href="~/Home/KategoriYazi/@kategori.Id">@kategori.KategoriAdi
                            (@kategori.Yazilar.Count)</a>
                    </li>
                }
               
            </ul>
        </div>
    </div>
</div>
