@model Uye
@{
    ViewBag.Title = "OturumAc";
}

<h1 class="my-4">Oturum Aç</h1>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("OturumAc", "Uyeler", new { returnUrl = ViewBag.returnUrl }, FormMethod.Post))
        {

            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.KullaniciAdi)
                @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.KullaniciAdi, null,
                new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Sifre)
                @Html.PasswordFor(m => m.Sifre, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Sifre, null,
                new { @class = "text-danger" })
            </div>

            <input type="submit" value="Giriş" class="btn btn-success" />
            @Html.ActionLink("Üye Ol", "UyeOl", "Uyeler", null, new { @class = "btn btn-primary" })
            <br /><br />

            @Html.ActionLink("Şifrenizi Mi Unuttunuz ?", "Contact", "Home",
                                null, new { @class = "nav-link" })

        }

        <br />

        @if (ViewBag.hata != null)
        {
            <div class="alert alert-danger">@ViewBag.hata</div>
        }

    </div>
</div>



